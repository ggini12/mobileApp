<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/activity_button_selected"/>
            <stroke android:width="2dp" android:color="@color/primary_color"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/activity_button_selected"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/activity_button"/>
            <stroke android:width="1dp" android:color="@color/secondary_text"/>
        </shape>
    </item>
</selector>